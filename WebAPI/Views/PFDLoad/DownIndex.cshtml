
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>各国签证所需资料下载</title>
    <link href="~/Content/resources/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        html, body, h1, h2, h3, h4, h5, h6, hr, p, iframe, dl, dt, dd, ul, ol, li, pre, form, button, input, textarea, th, td, fieldset {
            margin: 0;
            padding: 0;
        }

        .search-bar {
            display: inline-block;
            background: #2BA1F9;
            width: 100%;
            line-height: 40px;
            position: relative;
            top:0;
        }

            .search-bar input {
                width: 95%;
                height: 100%;
                padding: 5px;
                border-radius: 5px;
                box-sizing: border-box;
                outline: none; /*去除边框样式*/
                background-color: #fafafa;
                border: 1px solid #ddd;
                 font-size:13px;
                resize: none;
                z-index: 1;
                margin-left: 10px;
            }

        .clear {
            display: inline-block;
            position: absolute;
            line-height: 40px;
            height: 40px;
            width: 40px;
            right: 10px;
            z-index: 2;
            top: 1px;
           
            text-align: center;
            background: url("../../Content/images/login/search.png") no-repeat center center;
            background-size: 30px 30px;
        }

        .list-group-item div.content {
            display: flex;
            flex-direction: row;
            align-items: center;
            justify-content: space-between;
            border: 1px solid #0094ff;
            border-radius: 8px;
            height:40px;
            font-size:13px;
        }

        div.first {
            width: 79%;
            height: 40px;
        }

        div.second {
            width: 20%;
            height: 40px;
        }

        div.center {
            width: 1%;
            height: 40px;
            background: #ccc;
        }

        div.first span {
            padding: 5px;
            box-sizing: border-box;
            width: 100%;
            height: 40px;
            line-height: 40px;
            color: #2BA1F9;
        }

        div.first {
            max-width: 280px;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        div.second a {
            box-sizing: border-box;
            display: inline-block;
            width: 100%;
            height: 40px;
            line-height: 40px;
            text-align: center;
            text-decoration: none;
        }

        .noContent {
            position: absolute;
            display: inline-block;
            width: 200px;
            height: 200px;
            top: 50%;
            left: 50%;
            margin-left: -100px;
            margin-top: -100px;
            line-height: 200px;
            text-align: center;
            color: red;
            font-size: 20px;
        }
    </style>
</head>
<body>
    <div class="box">
        <div class="search-bar">
            <input type="text" id="fileName" placeholder='请输入你要查找的国家关键字' placeholder-class="placeholder" />
            <div class="clear" id="select-but"></div>

        </div>
        <div class="row pre-scrollable" id="list_Container">

        </div>

    </div>
    <script src="~/Content/resources/js/jquery-1.12.2.min.js"></script>
    <script src="~/Content/resources/bootstrap/js/bootstrap.js"></script>

    <script type="text/javascript">
        var chlidList = "", fileName = "", h = 0, w = 0;

        $(function () {
            h = $(window).height();
            w = $(window).width();
            $(".box").css({
                "width": w + "px",
                "margin-left": "0",
                "padding-bottom": "0"
            });
            $("#list_Container").css({
                "max-height": (h-50) + "px",
                "height": (h - 50) + "px",
                "width": w + "px",
                "margin-left": "0",
                "padding-bottom": "0"
            });
            LoadList();
            $("#select-but").on("click", function () {
                chlidList = "";
                fileName = $("#fileName").val().trim();
                LoadList();
            });
        })
        function LoadList() {
            $("#list_Container").empty();
            $.ajax({
                url: '/QZService/PFDLoad/GetVisaTableList',
                type: 'GET',
                async: true,
                data: { fileName: fileName },
                success: function (json) {
                    if (json != "" && json != null) {
                        var dataJson = JSON.parse(json);
                        for (var i = 0; i < dataJson.length; i++) {
                            chlidList += `<li class="list-group-item">
                                    <div class="content">
                                        <div class="first">
                                            <span> `+ dataJson[i].fileName + ` </span>
                                        </div>
                                        <div class="center">

                                        </div>
                                        <div class="second">
                                            <a href= "`+ dataJson[i].fileUrl + `" >下载</a>
                                        </div>
                                    </div>
                                </li>`
                        }
                        $('#list_Container').html('<ul class="list-group">' + chlidList + '</ul>');
                    } else {
                        $('#list_Container').html('<span class="noContent">暂未上传文件</span>');
                    }
                },
                fail: function (json) {
                    alert("网络连接出错！")
                }
            });
        }
    </script>

</body>
</html>
