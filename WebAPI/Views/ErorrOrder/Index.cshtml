                }
            })
        }*/

        function ConvertDataTime(str) {
            if (str==""||str==null) {
                return "请持续关注订单状况";
            }
            var date = new Date();
            date.setTime(str.replace("/Date(", "").replace(")/", ""));
            return date.Format("yyyy-MM-dd hh:mm:ss")
        }
    </script>
</body>

